<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.pmkomc22kelompok2.bookjas.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.pmkomc22kelompok2.bookjas.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.pmkomc22kelompok2.bookjas.ui.login.ui.login.LoginFragment"
        android:label="@string/title_login_register"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_navigation_register"
            app:destination="@id/navigation_register" />
    </fragment>

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.pmkomc22kelompok2.bookjas.ui.register.ui.login.RegisterFragment"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_navigation_register_to_navigation_login"
            app:destination="@id/navigation_login"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_register_to_navigation_start"
            app:destination="@id/navigation_start" />
    </fragment>

    <fragment
        android:id="@+id/navigation_start"
        android:name="com.pmkomc22kelompok2.bookjas.ui.start.StartFragment"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_navigation_start_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_start"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>